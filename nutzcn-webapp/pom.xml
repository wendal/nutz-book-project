<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.wendal.nutzcn</groupId>
		<artifactId>nutzcn-parent</artifactId>
		<version>6.0.1</version>
	</parent>
	<artifactId>nutzcn-webapp</artifactId>
	<packaging>jar</packaging>
	<properties>
		<nutzcn.version>${project.version}</nutzcn.version>
		<nutzboot.version>2.4.0.v20200427</nutzboot.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.nutz</groupId>
				<artifactId>nutzboot-parent</artifactId>
				<version>${nutzboot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>net.wendal.nutzcn</groupId>
			<artifactId>nutzcn-core</artifactId>
			<version>${nutzcn.version}</version>
		</dependency>
		<dependency>
			<groupId>net.wendal.nutzcn</groupId>
			<artifactId>nutzcn-adminlte</artifactId>
			<version>${nutzcn.version}</version>
		</dependency>
		<dependency>
			<groupId>org.nutz</groupId>
			<artifactId>nutzboot-starter-jetty</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nutz</groupId>
			<artifactId>nutzboot-starter-nutz-mvc</artifactId>
		</dependency>

		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm-util</artifactId>
			<version>6.1.1</version>
		</dependency>
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-core</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1.1</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>nutz</id>
			<url>https://jfrog.nutz.cn/artifactory/libs-release</url>
		</repository>
		<repository>
			<id>nutz-snapshots</id>
			<url>https://jfrog.nutz.cn/artifactory/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	<profiles>
		<profile>
			<id>yvr</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-yvr</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>beepay</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-beepay</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>shortit</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-shortit</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>dwmaster</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-dwmaster</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>sysinfo</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-sysinfo</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>oauth</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-oauth</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>ngrok</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-ngrok</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>weixin</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-weixin</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>qqrobot</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-qqrobot</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>aliyuniot</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-aliyuniot</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>luat</id>
			<dependencies>
				<dependency>
					<groupId>net.wendal.nutzcn</groupId>
					<artifactId>nutzcn-luat</artifactId>
					<version>${nutzcn.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<compilerArgs>
						<arg>-parameters</arg>
					</compilerArgs>
					<useIncrementalCompilation>false</useIncrementalCompilation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<configuration>
					<additionalparam>-Xdoclint:none</additionalparam>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.nutz.boot</groupId>
				<artifactId>nutzboot-maven-plugin</artifactId>
				<version>${nutzboot.version}</version>
			</plugin>
		</plugins>
	</build>
</project>